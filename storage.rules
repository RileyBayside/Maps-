rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Photos live at: work_photos/{siteId}/{uid}/{filename}
    match /work_photos/{siteId}/{uid}/{filename} {
      // only the signed-in user can write to their own UID folder
      allow write: if request.auth != null
                   && request.auth.uid == uid
                   && request.resource.size < 10 * 1024 * 1024  // 10 MB max
                   && request.resource.contentType.matches('image/.*');

      // allow reads to any signed-in user (tighten if you prefer)
      allow read: if request.auth != null;
    }

    // everything else denied by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
